.body {
  font-size: 16px;
  font-family: 'Raleway', sans-serif;
}

.site-container {
  width: 90rem;
  margin: 0px auto;
}

/* General CSS Classes */
.bold {
  font-weight: bold;
}

.uppercase {
  text-transform: uppercase;
}

a {
  text-decoration: none
}

#page-header {
  width: 100%;
  height: 46rem;
  /*background-image: url("../images/mountains.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;*/
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;

}

.background-image {
  background-color: #323437; /* #222225; /*#008B8B; /*#40E0D0; /*#696969;*/
  width: 100%;
  height: 47rem;
}

.background-image img {
  opacity: 0.9;
  width: 100%;
}

.nav-section {
  width: 100%;
  height: 4rem;
  position: absolute;
  top: 0;
  padding-top: 2rem;
  color: #ffffff;
  text-align: right;
  margin-right: 5rem;
}

.nav-section a {
  color: #ffffff;
  padding: 5rem;
}

.personal-information {
  width: auto;
  position: absolute;
  top: 13rem;
  color: #F8F8FF;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.personal-information .name {
  padding-bottom: 3rem;
  font-size: 3rem;
  font-family: Raleway;
}

.personal-information .title {
  padding-bottom: 3rem;
  font-size: 2.5rem;
  font-family: Raleway;
}

.contact-section {
  padding-top: 1rem;
  display: flex;
  justify-content: center;
  text-align: center;
}

.contact-section a {
  color: #F8F8FF;
  font-weight: bold;
  font-size: 1.5rem;
}

.circle-bg {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border-color: white;
  border-style: solid;
}

.skills {
  display: flex;
  justify-content: space-between;
  padding-top: 2rem;
}

.skill-list {
  display: flex;
  padding-right: 2rem;
  flex-direction: column;
}

.skill-list ul {
  color: #ffffff;
}

.skill-list li {
  list-style-type: circle;
  font-size: 1rem;
  padding-bottom: 1rem;
}

#works {
  width: 100%;
  height: 50rem;
  background-color: #C0C0C0; /*#F0F8FF;*/
}

.work-header {
  font-size: 2rem;
}

